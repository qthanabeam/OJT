{
  "name": "ojt_employ",
  "version": "1.0.0",
  "description": "Employee Management Application on SAP BTP",
  "repository": "https://github.com/qthanabeam/OJT.git",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^8",
    "@sap/xssec": "^4",
    "@cap-js/hana": "^1",
    "express": "^4",
    "passport": "^0.7"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.10.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "@sap/ui5-builder": "^3",
    "@ui5/cli": "^3",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-employ": "cds watch --open employ/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy ojt_employ --delete-services --delete-service-keys --delete-service-brokers"
  },
  "cds": {
    "requires": {
      "auth": "xsuaa",
      "db": "hana",
      "[hybrid]": {
        "auth": "xsuaa"
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  }
}
