<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    controllerName="ojt.employers.controller.EmployerDetailController"
>
    <Page
        id="_IDGenPage"
        title="{i18n>detailTitle}"
        showNavButton="true"
        navButtonPress="onNavBack"
    >
        <content>
            <f:SimpleForm
                id="employeeForm"
                editable="true"
                layout="ColumnLayout"
            >
                <f:content>
                    <Label
                        id="_IDGenLabel"
                        text="First Name"
                    />
                    <Input
                        id="_IDGenInput1"
                        value="{firstName}"
                    />
                    <Label
                        id="_IDGenLabel1"
                        text="Last Name"
                    />
                    <Input
                        id="_IDGenInput2"
                        value="{lastName}"
                    />
                    <Label
                        id="_IDGenLabel2"
                        text="Date of Birth"
                    />
                    <DatePicker
                        id="_IDGenDatePicker"
                        value="{dateOfBirth}"
                    />
                    <Label
                        id="_IDGenLabel3"
                        text="Gender"
                    />
                    <Input
                        id="_IDGenInput3"
                        value="{gender}"
                    />
                    <Label
                        id="_IDGenLabel4"
                        text="Email"
                    />
                    <Input
                        id="_IDGenInput4"
                        value="{email}"
                    />
                    <Label
                        id="_IDGenLabel5"
                        text="Hire Date"
                    />
                    <DatePicker
                        id="_IDGenDatePicker1"
                        value="{hireDate}"
                    />
                    <Label
                        id="_IDGenLabel6"
                        text="Role"
                    />
                    <ComboBox
                        id="_IDGenComboBox"
                        items="{/Roles}"
                    >
                        <items>
                            <core:Item
                                id="_IDGenItem"
                                key="{ID}"
                                text="{name}"
                            />
                        </items>
                        <value>{role/ID}</value>
                    </ComboBox>
                    <Label
                        id="_IDGenLabel7"
                        text="Department"
                    />
                    <ComboBox
                        id="_IDGenComboBox1"
                        items="{/Departments}"
                    >
                        <items>
                            <core:Item
                                id="_IDGenItem1"
                                key="{ID}"
                                text="{name}"
                            />
                        </items>
                        <value>{department/ID}</value>
                    </ComboBox>
                    <Label
                        id="_IDGenLabel8"
                        text="Performance Rating"
                    />
                    <Input
                        id="_IDGenInput5"
                        value="{performanceRating}"
                    />
                    <Label
                        id="_IDGenLabel9"
                        text="Salary"
                    />
                    <Input
                        id="_IDGenInput6"
                        value="{salary}"
                        editable="false"
                    />
                </f:content>
            </f:SimpleForm>

            <Button
                id="_IDGenButton"
                text="{i18n>calculateSalary}"
                press="onCalculateSalary"
                visible="{user>/isAdmin}"
            />
            <Button
                id="_IDGenButton1"
                text="{i18n>save}"
                press="onSave"
                visible="{user>/isAdmin}"
            />
            <Button
                id="_IDGenButton2"
                text="{i18n>delete}"
                press="onDelete"
                visible="{user>/isAdmin}"
            />
            <Button
                id="_IDGenButton3"
                text="Manage Leaves"
                press="onManageLeaves"
            />
        </content>
    </Page>
</mvc:View>
