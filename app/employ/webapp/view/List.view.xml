<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="ojt.employ.controller.List"
    displayBlock="true"
>
    <Page
        id="_IDGenPage1"
        title="{i18n>listTitle}"
        showHeader="false"
    >
        <content>
            <Table
                id="employeeTable"
                items="{
                    path: '/Employees',
                    parameters: {
                        $expand: 'role,department'
                    }
                }"
                growing="true"
                growingThreshold="10"
            >
                <headerToolbar>
                    <Toolbar id="_IDGenToolbar">
                        <Title
                            id="_IDGenTitle"
                            text="{i18n>employees}"
                        />
                        <ToolbarSpacer id="_IDGenToolbarSpacer" />
                        <Button
                            id="_IDGenButton4"
                            text="{i18n>onboardEmployee}"
                            icon="sap-icon://add-employee"
                            press="onNavToAddEmployee"
                            visible="{user>/isAdmin}"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column id="_IDGenColumn1">
                        <header>
                            <Text
                                id="_IDGenText14"
                                text="{i18n>fullName}"
                            />
                        </header>
                    </Column>
                    <Column id="_IDGenColumn2">
                        <header>
                            <Text
                                id="_IDGenText15"
                                text="{i18n>role}"
                            />
                        </header>
                    </Column>
                    <Column id="_IDGenColumn3">
                        <header>
                            <Text
                                id="_IDGenText16"
                                text="{i18n>department}"
                            />
                        </header>
                    </Column>
                    <Column id="_IDGenColumn4">
                        <header>
                            <Text
                                id="_IDGenText17"
                                text="{i18n>email}"
                            />
                        </header>
                    </Column>
                    <Column
                        id="_IDGenColumn5"
                        width="10%"
                        visible="{user>/isAdmin}"
                    >
                        <header>
                            <Text
                                id="_IDGenText18"
                                text="{i18n>actions}"
                            />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        id="_IDGenColumnListItem"
                        press="onItemPress"
                        type="Navigation"
                    >
                        <cells>
                            <Text
                                id="_IDGenText4"
                                text="{firstName} {lastName}"
                            />
                            <Text
                                id="_IDGenText5"
                                text="{role/name}"
                            />
                            <Text
                                id="_IDGenText6"
                                text="{department/name}"
                            />
                            <Text
                                id="_IDGenText7"
                                text="{email}"
                            />
                            <Button
                                id="_IDGenButton5"
                                icon="sap-icon://delete"
                                press="onDelete"
                                visible="{user>/isAdmin}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
