<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="ojt.employ.controller.List"
    displayBlock="true"
>
    <Page
        id="_IDGenPage1"
        title="{i18n>listTitle}"
    >
        <content>
            <Table
                id="employeeTable"
                items="{/Employees}"
            >
                <headerToolbar>
                    <Toolbar id="_IDGenToolbar">
                        <Title
                            id="_IDGenTitle"
                            text="Employees"
                        />
                        <ToolbarSpacer id="_IDGenToolbarSpacer" />
                        <Button
                            id="_IDGenButton4"
                            text="{i18n>onboardEmployee}"
                            icon="sap-icon://add-employee"
                            press="onAddEmployee"
                            visible="{user>/isAdmin}"
                        />
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column id="_IDGenColumn1">
                        <header>
                            <Text
                                id="_IDGenText14"
                                text="Full Name"
                            />
                        </header>
                    </Column>
                    <Column id="_IDGenColumn2">
                        <header>
                            <Text
                                id="_IDGenText15"
                                text="Role"
                            />
                        </header>
                    </Column>
                    <Column id="_IDGenColumn3">
                        <header>
                            <Text
                                id="_IDGenText16"
                                text="Department Name"
                            />
                        </header>
                    </Column>
                    <Column id="_IDGenColumn4">
                        <header>
                            <Text
                                id="_IDGenText17"
                                text="Email"
                            />
                        </header>
                    </Column>
                    <Column
                        id="_IDGenColumn5"
                        width="10%"
                    >
                        <header>
                            <Text
                                id="_IDGenText18"
                                text="Actions"
                            />
                        </header>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem
                        id="_IDGenColumnListItem"
                        press="onItemPress"
                    >
                        <cells>
                            <Text
                                id="_IDGenText4"
                                text="{firstName} {lastName}"
                            />
                            <Text
                                id="_IDGenText5"
                                text="{role/name}"
                            />
                            <Text
                                id="_IDGenText6"
                                text="{department/name}"
                            />
                            <Text
                                id="_IDGenText7"
                                text="{email}"
                            />
                            <Button
                                id="_IDGenButton5"
                                icon="sap-icon://delete"
                                press="onDelete"
                                visible="{user>/isAdmin}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
