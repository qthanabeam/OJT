<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    controllerName="ojt.employ.controller.Detail"
>
    <Page
        id="_IDGenPage"
        title="{i18n>detailTitle}"
        showNavButton="true"
        navButtonPress="onNavBack"
    >
        <content>
            <f:SimpleForm
                id="employeeForm"
                editable="true"
                layout="ColumnLayout"
            >
                <f:content>
                    <Label text="First Name" />
                    <Input value="{firstName}" />

                    <Label text="Last Name" />
                    <Input value="{lastName}" />

                    <Label text="Date of Birth" />
                    <DatePicker value="{dateOfBirth}" />

                    <Label text="Gender" />
                    <Input value="{gender}" />

                    <Label text="Email" />
                    <Input value="{email}" />

                    <Label text="Hire Date" />
                    <DatePicker value="{hireDate}" />

                    <Label text="Role" />
                    <ComboBox
                        id="_IDGenComboBox"
                        items="{/Roles}"
                        selectedKey="{role_ID}"
                    >
                        <core:Item
                            key="{ID}"
                            text="{name}"
                        />
                    </ComboBox>

                    <Label text="Department" />
                    <ComboBox
                        id="_IDGenComboBox1"
                        items="{/Departments}"
                        selectedKey="{department_ID}"
                    >
                        <core:Item
                            key="{ID}"
                            text="{name}"
                        />
                    </ComboBox>

                    <Label text="Performance Rating (1-5)" />
                    <Input
                        value="{performanceRating}"
                        type="Number"
                    />

                    <Label text="Salary" />
                    <Input
                        value="{salary}"
                        editable="false"
                    />
                </f:content>
            </f:SimpleForm>

            <VBox class="sapUiMediumMargin">
                <Button
                    text="{i18n>calculateSalary}"
                    press="onCalculateSalary"
                    visible="{user>/isAdmin}"
                    type="Emphasized"
                />
                <Button
                    text="{i18n>save}"
                    press="onSave"
                    visible="{user>/isAdmin}"
                    type="Accept"
                />
                <Button
                    text="{i18n>delete}"
                    press="onDelete"
                    visible="{user>/isAdmin}"
                    type="Reject"
                />
                <Button
                    text="Quản lý nghỉ phép"
                    press="onManageLeaves"
                />
            </VBox>
        </content>
    </Page>
</mvc:View>
