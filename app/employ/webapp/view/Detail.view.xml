<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    controllerName="ojt.employ.controller.Detail"
>
    <Page
        id="_IDGenPage2"
        title="{i18n>detailTitle}"
        showHeader="false"
    >
        <content>
            <f:SimpleForm
                id="employeeForm"
                editable="true"
                layout="ColumnLayout"
            >
                <f:content>
                    <Label
                        id="_IDGenLabel10"
                        text="{i18n>firstName}"
                    />
                    <Input
                        id="_IDGenInput"
                        value="{firstName}"
                        enabled="{user>/isAdmin}"
                    />

                    <Label
                        id="_IDGenLabel14"
                        text="{i18n>lastName}"
                    />
                    <Input
                        id="_IDGenInput1"
                        value="{lastName}"
                        enabled="{user>/isAdmin}"
                    />

                    <Label
                        id="_IDGenLabel15"
                        text="{i18n>dateOfBirth}"
                    />
                    <DatePicker
                        id="_IDGenDatePicker"
                        value="{path: 'dateOfBirth', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true }}"
                        enabled="{user>/isAdmin}"
                    />

                    <Label
                        id="_IDGenLabel16"
                        text="{i18n>gender}"
                    />
                    <Input
                        id="_IDGenInput2"
                        value="{gender}"
                        enabled="{user>/isAdmin}"
                    />

                    <Label
                        id="_IDGenLabel17"
                        text="{i18n>email}"
                    />
                    <Input
                        id="_IDGenInput3"
                        value="{email}"
                        enabled="{user>/isAdmin}"
                    />

                    <Label
                        id="_IDGenLabel18"
                        text="{i18n>hireDate}"
                    />
                    <DatePicker
                        id="_IDGenDatePicker1"
                        value="{path: 'hireDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true }}"
                        enabled="{user>/isAdmin}"
                    />

                    <Label
                        id="_IDGenLabel19"
                        text="{i18n>role}"
                    />
                    <ComboBox
                        id="_IDGenComboBox"
                        items="{/Roles}"
                        selectedKey="{role_ID}"
                        enabled="{user>/isAdmin}"
                    >
                        <core:Item
                            id="_IDGenItem2"
                            key="{ID}"
                            text="{name}"
                        />
                    </ComboBox>

                    <Label
                        id="_IDGenLabel20"
                        text="{i18n>department}"
                    />
                    <ComboBox
                        id="_IDGenComboBox1"
                        items="{/Departments}"
                        selectedKey="{department_ID}"
                        enabled="{user>/isAdmin}"
                    >
                        <core:Item
                            id="_IDGenItem3"
                            key="{ID}"
                            text="{name}"
                        />
                    </ComboBox>

                    <Label
                        id="_IDGenLabel21"
                        text="{i18n>performanceRating}"
                    />
                    <Input
                        id="_IDGenInput4"
                        value="{performanceRating}"
                        type="Number"
                        enabled="{user>/isAdmin}"
                    />

                    <Label
                        id="_IDGenLabel22"
                        text="{i18n>salary}"
                    />
                    <Input
                        id="_IDGenInput5"
                        value="{path: 'salary', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }}"
                        editable="false"
                    />
                </f:content>
            </f:SimpleForm>

            <VBox
                id="_IDGenVBox1"
                class="sapUiMediumMargin"
            >
                <Button
                    id="_IDGenButton"
                    text="{i18n>calculateSalary}"
                    press="onCalculateSalary"
                    visible="{user>/isAdmin}"
                    type="Emphasized"
                />
                <Button
                    id="_IDGenButton9"
                    text="{i18n>save}"
                    press="onSave"
                    visible="{user>/isAdmin}"
                    type="Accept"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>delete}"
                    press="onDelete"
                    visible="{user>/isAdmin}"
                    type="Reject"
                />
                <Button
                    id="_IDGenButton11"
                    text="{i18n>manageLeaves}"
                    press="onManageLeaves"
                />
            </VBox>
        </content>
    </Page>
</mvc:View>
