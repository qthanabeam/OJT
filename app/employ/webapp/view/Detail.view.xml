<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    controllerName="ojt.employ.controller.Detail"
>
    <Page
        id="_IDGenPage"
        title="{i18n>detailTitle}"
        showNavButton="true"
        navButtonPress="onNavBack"
    >
        <content>
            <f:SimpleForm
                id="employeeForm"
                editable="true"
                layout="ColumnLayout"
            >
                <f:content>
                    <Label id="_IDGenLabel1" text="First Name" />
                    <Input id="_IDGenInput" value="{firstName}" />

                    <Label id="_IDGenLabel2" text="Last Name" />
                    <Input id="_IDGenInput1" value="{lastName}" />

                    <Label id="_IDGenLabel3" text="Date of Birth" />
                    <DatePicker id="_IDGenDatePicker" value="{dateOfBirth}" />

                    <Label id="_IDGenLabel4" text="Gender" />
                    <Input id="_IDGenInput2" value="{gender}" />

                    <Label id="_IDGenLabel5" text="Email" />
                    <Input id="_IDGenInput3" value="{email}" />

                    <Label id="_IDGenLabel6" text="Hire Date" />
                    <DatePicker id="_IDGenDatePicker1" value="{hireDate}" />

                    <Label id="_IDGenLabel7" text="Role" />
                    <ComboBox
                        id="_IDGenComboBox"
                        items="{/Roles}"
                        selectedKey="{role_ID}"
                    >
                        <core:Item id="_IDGenItem"
                            key="{ID}"
                            text="{name}"
                        />
                    </ComboBox>

                    <Label id="_IDGenLabel8" text="Department" />
                    <ComboBox
                        id="_IDGenComboBox1"
                        items="{/Departments}"
                        selectedKey="{department_ID}"
                    >
                        <core:Item id="_IDGenItem1"
                            key="{ID}"
                            text="{name}"
                        />
                    </ComboBox>

                    <Label id="_IDGenLabel9" text="Performance Rating (1-5)" />
                    <Input id="_IDGenInput4"
                        value="{performanceRating}"
                        type="Number"
                    />

                    <Label id="_IDGenLabel10" text="Salary" />
                    <Input id="_IDGenInput5"
                        value="{salary}"
                        editable="false"
                    />
                </f:content>
            </f:SimpleForm>

            <VBox id="_IDGenVBox" class="sapUiMediumMargin">
                <Button id="_IDGenButton"
                    text="{i18n>calculateSalary}"
                    press="onCalculateSalary"
                    visible="{user>/isAdmin}"
                    type="Emphasized"
                />
                <Button id="_IDGenButton1"
                    text="{i18n>save}"
                    press="onSave"
                    visible="{user>/isAdmin}"
                    type="Accept"
                />
                <Button id="_IDGenButton2"
                    text="{i18n>delete}"
                    press="onDelete"
                    visible="{user>/isAdmin}"
                    type="Reject"
                />
                <Button id="_IDGenButton3"
                    text="Quản lý nghỉ phép"
                    press="onManageLeaves"
                />
            </VBox>
        </content>
    </Page>
</mvc:View>
