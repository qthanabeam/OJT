<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <f:SimpleForm
        id="addEmployeeForm"
        editable="true"
        layout="ColumnLayout"
        title="{i18n>newEmployee}"
    >
        <f:content>
            <Label
                id="firstNameLabel"
                text="{i18n>firstName}"
            />
            <Input
                id="firstNameInput"
                value="{newEmployee>/firstName}"
            />
            <Label
                id="lastNameLabel"
                text="{i18n>lastName}"
            />
            <Input
                id="lastNameInput"
                value="{newEmployee>/lastName}"
            />
            <Label
                id="dobLabel"
                text="{i18n>dateOfBirth}"
            />
            <DatePicker
                id="dobPicker"
                valueFormat="yyyy-MM-dd"
                value="{path: 'newEmployee>/dateOfBirth'}"
            />
            <Label
                id="genderLabel"
                text="{i18n>gender}"
            />
            <Input
                id="genderInput"
                value="{newEmployee>/gender}"
            />
            <Label
                id="emailLabel"
                text="{i18n>email}"
            />
            <Input
                id="emailInput"
                value="{newEmployee>/email}"
            />
            <Label
                id="hireDateLabel"
                text="{i18n>hireDate}"
            />
            <DatePicker
                id="hireDatePicker"
                valueFormat="yyyy-MM-dd"
                value="{path: 'newEmployee>/hireDate'}"
            />
            <Label
                id="roleLabel"
                text="{i18n>role}"
            />
            <ComboBox
                id="roleComboBox"
                items="{/Roles}"
                selectedKey="{newEmployee>/role_ID}"
            >
                <core:Item
                    id="roleItem"
                    key="{ID}"
                    text="{name}"
                />
            </ComboBox>
            <Label
                id="departmentLabel"
                text="{i18n>department}"
            />
            <ComboBox
                id="departmentComboBox"
                items="{/Departments}"
                selectedKey="{newEmployee>/department_ID}"
            >
                <core:Item
                    id="departmentItem"
                    key="{ID}"
                    text="{name}"
                />
            </ComboBox>
            <Label
                id="performanceRatingLabel"
                text="{i18n>performanceRating}"
            />
            <Input
                id="performanceRatingInput"
                value="{newEmployee>/performanceRating}"
                type="Number"
            />
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>
